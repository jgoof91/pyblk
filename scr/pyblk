#!/usr/bin/python3

import os
import Server

SOCK_PATH = os.getenv('PYBLK_SOCK_ADDR', default='/tmp/pyblk.sock')
SHELL = os.getenv('PYBLK_SHELL', default='/bin/sh')

def main():
    try:
        server = Server.Server(SOCK_PATH, SHELL)
        server.loop()
    finally:
        server.close()


if __name__ == '__main__':
    main()
